@page
@model RegisterModel
@{
    ViewData["Title"] = "Registeren";
}

<style>
    .jumbotron {
        height: 50vh;
    }

    .jumbotron::before {
        background-color: #853989;
    }
</style>

<partial name="_Jumbotron"></partial>
<div class="container-fluid position-relative px-0" style="top: -5rem;">
    <div class="bg-light shadow-lg mx-sm-5 px-5 pb-5">
        <div class="col-12 text-center">
            <h3 class="display-5 py-4">@ViewData["Title"]</h3>
            <p class="text-muted">Maak een nieuwe hulpverlener aan.</p>
        </div>
        <div class="row">
            <div class="col-md-4 mx-auto">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Input.VNaam"></label>
                        <input asp-for="Input.VNaam" class="form-control" />
                        <span asp-validation-for="Input.VNaam" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ANaam"></label>
                        <input asp-for="Input.ANaam" class="form-control" />
                        <span asp-validation-for="Input.ANaam" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Email"></label>
                        <input asp-for="Input.Email" class="form-control" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Specialiteit"></label>
                        <input asp-for="Input.Specialiteit" class="form-control" />
                        <span asp-validation-for="Input.Specialiteit" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.Password"></label>
                        <input asp-for="Input.Password" class="form-control" />
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Input.ConfirmPassword"></label>
                        <input asp-for="Input.ConfirmPassword" class="form-control" />
                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Register</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}
