<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - webapplication</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body class="text-dark">
    <partial name="_NavPartial"></partial>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="mx-sm-5 text-dark" style="background-color: rgba(255, 255, 255, .9);">
        <section class="d-flex justify-content-center align-items-center p-4 border-bottom">
            <div class="mr-5 d-none d-lg-block">
                <h3>Meld je aan voor een intake gesprek</h3>
            </div>
            <div>
                <a class="btn btn-primary btn-lg mx-1" id="register" asp-area="Identity" asp-controller="Home"
                    asp-action="IntakeVragen" role="button">Aanmelden</a>
            </div>
        </section>
        <section>
            <div class="container mt-5">
                <div class="row mt-3">
                    <div class="col-md-3 col-lg-4 col-xl-3 mx-auto mb-4">
                        <h3 class="text-uppercase fw-bold h4 mb-3">ZMDH</h3>
                        <p class="text-wrap">
                            Lorem ipsum dolor sit amet, consectetur adipisicing elit. Eum molestias excepturi corrupti
                            quis laudantium exercitationem nostrum dolorum mollitia quos quibusdam!
                        </p>
                    </div>
                    <div class="col-md-2 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h3 class="text-uppercase fw-bold h4 mb-3">home</h3>
                        <ul class="list-unstyled">
                            <li><a href="#">Over ons</a></li>
                            <li><a href="">Onze vissie</a></li>
                            <li><a asp-area="" asp-controller="Home" asp-action="Team">Hulpverleners</a></li>
                        </ul>
                    </div>
                    <div class="col-md-3 col-lg-2 col-xl-2 mx-auto mb-4">
                        <h3 class="text-uppercase fw-bold h4 mb-3">???</h3>
                        <ul class="list-unstyled">
                            <li><a href="#">Lorem.</a></li>
                            <li><a href="#">Lorem.</a></li>
                            <li><a href="#">Lorem.</a></li>
                            <li><a href="#">Lorem.</a></li>
                        </ul>
                    </div>
                    <div class="col-md-4 col-lg-3 col-xl-3 mx-auto mb-md-4">
                        <h3 class="text-uppercase fw-bold h4 mb-3">contact</h3>
                        <ul class="list-unstyled">
                            <li>Den Haag</li>
                            <li><a href="mailto:student@student.hhs.nl">student@student.hhs.nl</a></li>
                            <li><a href="tel:+0123456789">+ 01 234 567 89</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
        <div class="text-center p-4" style="background-color: rgba(0, 0, 0, .2);">
            <p class="m-0">© @DateTime.Now.Year Copyright</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
