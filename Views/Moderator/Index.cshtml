<style>
    .page-content {
        width: calc(100% - 14rem);
        margin-left: 14rem;
        transition: all .4s;
    }

    #content.active {
        width: 100%;
        margin: 0;
    }

    @@media (max-width: 768px) {
        #content {
            width: 100%;
            margin: 0;
        }

        #content.active {
            margin-left: 14rem;
            width: calc(100% - 14rem);
        }
    }

    .card {
        border: none;
    }
</style>

